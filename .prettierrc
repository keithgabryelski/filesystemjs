printWidth: 100
tabWidth: 2
useTabs: false
overrides:
  - files: "*.js"
    options:
      parser: babel-flow
      trailingComma: es5
      jsxBracketSameLine: true
      proseWrap: preserve
      singleQuote: true
      arrowParens: avoid
  - files: "*.md"
    options:
      parser: markdown
  - files: "*.json"
    options:
      parser: json
  - files: "*.css"
    options:
      parser: css
  - files: "*.scss"
    options:
      parser: scss
